FROM node:18-alpine

WORKDIR /app

# Install dependencies
COPY infrastructure/backend-service/package*.json ./
RUN npm install
RUN npm install -D @types/node @types/ws

# Copy source code
COPY infrastructure/backend-service/ ./

# Build TypeScript code
RUN npm run build

# Expose port
EXPOSE 3000

# Start the service
CMD ["npm", "start"]